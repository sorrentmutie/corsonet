@using FirstLibrary.Core.Conferenze
<h3>@Titolo</h3>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Luogo</th>
            <th>Data Inizio</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Eventi == null)
        {
            <tr>
                <td colspan="3">Nessun evento presente</td>
            </tr>
        }
        else
        {
            @foreach (var evento in Eventi)
            {
                <tr>
                    <td>@evento.Nome</td>
                    <td>@evento.Luogo</td>
                    <td>@evento.DataInizio</td>
                    <td>
                        <button @onclick="() => OnEventoEliminato.InvokeAsync(evento)" class="btn btn-danger">Elimina</button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@code {
    [Parameter]
    public string Titolo { get; set; } = "Lista Eventi"; 

    [Parameter]
    public List<Evento>? Eventi { get; set; }

    [Parameter]
    public EventCallback<Evento> OnEventoEliminato { get; set; }

    protected override async Task OnInitializedAsync()
    {


        base.OnInitialized();   
    }

    protected override void OnParametersSet()
    {
        base.OnParametersSet();
    }

    protected override void OnAfterRender(bool firstRender)
    {
        base.OnAfterRender(firstRender);
    }

}
